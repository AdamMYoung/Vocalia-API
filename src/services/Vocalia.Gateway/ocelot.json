{
  "ReRoutes": [
    //Podacst
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "vocalia.podcast",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/podcast/{everything}",
      "UpstreamHttpMethod": [ "GET", "DELETE", "POST", "PUT" ]
    },
    //Social
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "vocalia.social",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/social/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE" ]
    },
    //Ingest
    {
      "DownstreamPathTemplate": "/voice/",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "vocalia.ingest",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/ingest/voice/",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },
    {
      "DownstreamPathTemplate": "/api/{anything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "vocalia.ingest",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/ingest/data/{anything}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://api.vocalia.co.uk"
  }
}
